{
  "name": "rockplate-vscode",
  "displayName": "Rockplate VSCode",
  "description": "Official Rockplate Language Support Extension with Linter and Syntax Highlight for Visual Studio Code",
  "version": "1.0.1",
  "author": "Safraz Razik",
  "publisher": "safrazik",
  "icon": "images/rockplate-logo.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:rockplate",
    "onLanguage:rockplatehtml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rockplate",
        "aliases": [
          "Rockplate",
          "rockplate"
        ],
        "extensions": [
          ".rpl"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rockplatehtml",
        "aliases": [
          "RockplateHTML",
          "rockplatehtml"
        ],
        "extensions": [
          ".rphtml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rockplate",
        "scopeName": "source.rockplate",
        "path": "./syntaxes/rockplate.tmLanguage.json"
      },
      {
        "language": "rockplatehtml",
        "scopeName": "source.rockplatehtml",
        "path": "./syntaxes/rockplatehtml.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rockplate configuration",
      "properties": {
        "rockplateLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "rockplateLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rockplate/rockplate-vscode.git"
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode development",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "watch-webpack": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.1",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "rockplate-language-server": "^1.0.1",
    "vscode-languageclient": "^6.1.3",
    "vscode-uri": "^2.1.1"
  }
}
